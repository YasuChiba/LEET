<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/goals_to_acc_vs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:layout_gravity="center"
                android:textSize="50dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/goals_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

                <Button
                    android:id="@+id/Recommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="Use Recommended"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Price Here"
                    android:maxLength="5"
                    android:inputType="number"
                    android:backgroundTint="@android:color/holo_orange_dark">

                    <requestFocus />
                </EditText>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/Price"
                    android:layout_alignBottom="@+id/Price"
                    android:layout_alignParentLeft="true"
                    android:text="@string/Price" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/Calorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Calorie Here"
                    android:inputType="number"
                    android:maxLength="5"
                    android:backgroundTint="@android:color/holo_orange_dark">>

                    <requestFocus />
                </EditText>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/Calorie"
                    android:layout_alignBottom="@+id/Calorie"
                    android:layout_alignParentLeft="true"
                    android:text="@string/Calorie" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/Carbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Carbs Here"
                    android:maxLength="5"
                    android:inputType="number"
                    android:backgroundTint="@android:color/holo_orange_dark">>

                    <requestFocus />
                </EditText>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/Carbs"
                    android:layout_alignBottom="@+id/Carbs"
                    android:layout_alignParentLeft="true"
                    android:text="@string/Carbs" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/Protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="5"
                    android:hint="Protein Here"
                    android:backgroundTint="@android:color/holo_orange_dark">>

                    <requestFocus />
                </EditText>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/Protein"
                    android:layout_alignBottom="@+id/Protein"
                    android:layout_alignParentLeft="true"
                    android:text="@string/Protein" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/Fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Fat Here"
                    android:inputType="number"
                    android:maxLength="5"
                    android:backgroundTint="@android:color/holo_orange_dark">>

                    <requestFocus />
                </EditText>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/Fat"
                    android:layout_alignBottom="@+id/Fat"
                    android:layout_alignParentLeft="true"
                    android:text="@string/Fat" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/holo_red_light"
                    android:text="Delete Account" />

                <Button
                    android:id="@+id/acc_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:maxLength="30"
                    android:text="" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:maxLength="15"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Height"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/Feet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/feet_array"></Spinner>


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="@string/Feet"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/Inch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/inches_array"></Spinner>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="@string/Inches"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Weight"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Gender"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:entries="@array/whatGender"></Spinner>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Age"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:maxLength="2"
                    android:inputType="number"
                    android:text="0" />

            </LinearLayout>

        </LinearLayout>


    </ViewSwitcher>
</LinearLayout>